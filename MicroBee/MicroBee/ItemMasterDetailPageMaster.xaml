<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MicroBee.ItemMasterDetailPageMaster"
             Title="Master" >
	<StackLayout>
		<ListView x:Name="listView" x:FieldModifier="public" ItemsSource="{Binding MenuItems}">
			<ListView.ItemTemplate>
				<DataTemplate>
					<ViewCell>
						<Label Text="{Binding Title}" Margin="20,2,0,0"/>
					</ViewCell>
				</DataTemplate>
			</ListView.ItemTemplate>
		</ListView>
	</StackLayout>
</ContentPage>